*#
 
  begin { mark "top"; add ":"; put; clear; }
  read;
  [:alpha:] {
    ![fgnpxsate] { d; add "next*"; push; .reparse }
    [fgnpxsate] { 
      ++; put;  
      mark "here";
      # add the letter to the 1st tape cell
      go "top"; swap; get; swap; go "here";
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }
      --; (==) { d; a+; a+; }

      go "here";
    }
    # the essential letter
    "e" { 
      clear; count; 
      !"0" { clear; add "next*"; push; .reparse }
      "0" { a+; } 
      clear;
    }
  }
  [:space:],(eof) {
    clear; count; 
    !"1" { 
      clear; add "clear*"; push; .reparse 
    }
    clear; go "top"; get; add "\n"; print; while [:space:];
    clear; add "clear*"; push; .reparse
  }

  # ignore all other characters.
  clear;
parse>

  pop;
  # reject this word, reset state.
  "clear*" {
    clear; zero; 
    ++; ++; ++; ++; ++; ++; ++; ++; ++;
    put; --; put; --; put;
    --; put; --; put; --; put;
    --; put; --; put; --; put; --; put; --; put;
    go "top";
  }
  push;

